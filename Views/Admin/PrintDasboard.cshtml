<body style="font-family: 'Times New Roman', Times, serif">
    <div id="report" class="wrapper bg-white">
        <div class="main bg-white">
            <main class="content">
                <div class="container-fluid p-0">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="h1 mb-3 d-flex justify-content-center">
                                <strong>REPORT</strong>
                            </h1>
                        </div>
                    </div>
                    <div class="row">
                        <span class="col-md-12 d-flex justify-content-end mb-3">
                            Ha Noi, April 5th, 2024
                        </span>
                    </div>
                    <div class="py-3 px-5">
                        <h3 class="h3 mb-3">I. Overview</h3>
                        <div class="row px-3">
                            <div class="col-md-6">
                                <div>- Total user: @Model.Total</div>
                                <div>- New user: @Model.NewToday</div>
                            </div>
                            <div class="col-md-6">
                                <div>- Male user: @Model.TotalMale</div>
                                <div>- Female user: @Model.TotalFemale</div>
                            </div>
                        </div>


                    </div>

                    <div class="py-3 px-5">
                        <h3 class="h3 mb-3">II. Detail</h3>
                        <div class="ps-3">
                            <div>
                                <div class="ps-3 mb-3   ">
                                    <h4 class="h4">1. New user past 30 days</h4>
                                    <div><em>(This statistic about amount of new user registrated in website each day past 30 days)</em></div>
                                </div>

                                <table id="table-chart7" class="display mb-3 text-center" style="width:100%">
                                    <thead>
                                        <tr style="background-color:#dfe6e9">
                                            <th>#</th>
                                            <th>Date</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int count = 1;
                                        }
                                        @foreach (var data in Model.Data7)
                                        {
                                            @if(count == 17)
                                            {
                                                <tr class="tr-17">
                                                    <td>@count</td>
                                                    <td>@data.Key</td>
                                                    <td>@data.Value</td>
                                                </tr>
                                            }else
                                            {
                                                <tr>
                                                    <td>@count</td>
                                                    <td>@data.Key</td>
                                                    <td>@data.Value</td>
                                                </tr>
                                            }

                                        count++;
                                        }
                                    </tbody>
                                </table>
                                <span class="ms-3">- Most day new user: 01/01/2024 (30 user)</span>
                            </div>
                            <div class="py-3" id="new-user-by-month">
                                <div class="ps-3 mb-3   ">
                                    <h4 class="h4">2. New user by month</h4>
                                    <div><em>(Statistic about amount of new user count by month)</em></div>
                                </div>
                                <table id="table-chart7" class="display text-center" style="width:100%; ">
                                    <thead>
                                        <tr style="background-color:#dfe6e9">
                                            <th>#</th>
                                            <th>Month</th>
                                            <th>Year</th>
                                            <th>Ammount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
                                            <td>10</td>
                                            <td>2024</td>
                                            <td>12</td>
                                        </tr>
                                        <tr>
                                            <td>1</td>
                                            <td>10</td>
                                            <td>2024</td>
                                            <td>12</td>
                                        </tr>
                                        <tr>
                                            <td>1</td>
                                            <td>10</td>
                                            <td>2024</td>
                                            <td>12</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="py-3">
                                <div class="ps-3 mb-3">
                                    <h4 class="h4">3. Most province by users </h4>
                                    <div><em>(Statistic count top 10 province/city provided by user)</em></div>
                                </div>
                                <table id="table-chart7" class="display text-center" style="width:100%">
                                    <thead>
                                        <tr style="background-color:#dfe6e9">
                                            <th>#</th>
                                            <th>City / Province</th>
                                            <th>Regular address</th>
                                            <th>Pernament residence</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>1</td>
