@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Responsive Admin &amp; Dashboard Template based on Bootstrap 5">
    <meta name="author" content="AdminKit">
    <meta name="keywords" content="adminkit, bootstrap, bootstrap 5, admin, dashboard, template, responsive, css, sass, html, theme, front-end, ui kit, web">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="shortcut icon" href="/template/img/icons/icon-48x48.png" />
    <link rel="canonical" href="https://demo-basic.adminkit.io/" />

    <title>Shift</title>

    <link href="/template/css/app.css" rel="stylesheet">
    <link href="/template/css/light.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="/template/js/DataTables/datatables.min.css" rel="stylesheet" />

</head>

<body>
    
    <div class="wrapper">
        <partial name="~/Views/Partials/Side_bar.cshtml"></partial>
        <div class="main">
            <partial name="~/Views/Partials/Top_navbar.cshtml"></partial>
            <main class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <h1 class="h3 mb-3"><strong>SHIFT</strong></h1>
                        </div>
                        <div class="col-md-6 d-flex justify-content-end">
                            <span class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#exampleModal">CREATE SHIFT</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card p-3">
                                <table id="shift-table" class="stripe hover row-border">
                                    <thead>
                                        <tr>
                                            <th class="text-center">#</th>
                                            <th>Name</th>
                                            <th>Time in</th>
                                            <th>Time out</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th class="text-center">#</th>
                                            <th>Name</th>
                                            <th>Time in</th>
                                            <th>Time out</th>
                                            <th>Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
            <!-- MODAL -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Create shift</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post">
                                <div class="mb-3">
                                    <label for="create-shift-name" class="col-form-label fw-bold">Shift name:</label>
                                    <input type="text" class="form-control" id="create-shift-name">
                                </div>
                                <div class="mb-3">
                                    <label for="shift-name" class="col-form-label fw-bold">Time in:</label>
                                    <input type="date" class="form-control" id="create-time-in">
                                </div>
                                <div class="mb-3">
                                    <label for="shift-name" class="col-form-label fw-bold">Time out:</label>
                                    <input type="date" class="form-control" id="create-time-out">
                                </div>
                                <div class="mb-3">
                                    <label for="create-message-text" class="col-form-label fw-bold">Description:</label>
                                    <textarea class="form-control" id="create-message-text" rows="5"></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="edit-shift-modal" tabindex="-1" aria-labelledby="edit-shift-modal-label" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="edit-shift-modal-label">EDIT SHIFT</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post">
                                <div class="mb-3">
                                    <label for="" class="col-form-label fw-bold">Shift name:</label>
                                    <input type="text" class="form-control" id="edit-shift-name">
                                </div>
                                <div class="mb-3">
                                    <label for="" class="col-form-label fw-bold">Time in:</label>
                                    <input type="date" class="form-control" id="edit-time-in">
                                </div>
                                <div class="mb-3">
                                    <label for="" class="col-form-label fw-bold">Time out:</label>
                                    <input type="date" class="form-control" id="edit-time-out">
                                </div>
                                <div class="mb-3">
                                    <label for="edit-message-text" class="col-form-label fw-bold">Description:</label>
                                    <textarea class="form-control" id="edit-message-text" rows="5"></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="modal fade" id="delete-shift-modal" tabindex="-1" aria-labelledby="edit-shift-modal-label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="edit-shift-modal-label">DELETE SHIFT</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure to delete?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--END MODAL-->
            <partial name="~/Views/Partials/Footer.cshtml"></partial>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
    <script src="/template/js/DataTables/datatables.min.js"></script>

    <script src="/template/js/app.js"></script>
    <script src="/template/js/TimeKeeping/modal.js"></script>
    <script src="/template/js/TimeKeeping/datatables.js"></script>
    <script src="/template/js/TimeKeeping/timekeeping.js"></script>
    <script src="/template/js/custom_navbar.js"></script>


</body>

</html>